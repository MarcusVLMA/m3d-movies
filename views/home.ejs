<%- contentFor('style') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/home.css" />

<%- contentFor('main') %>
<div class="content-wrapper">
  <div class="content">
    <div class="title">
      <h2>Seja Bem-Vindo(a)!</h2>
      <h3>
        Muitas informações de filmes,<br />
        séries e animes.<br />Explore!
      </h3>
    </div>
    <div class="search">
      <div class="s-bar">
        <form id="search" action="/title/search" method="get">
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Buscar por um filme, série ou anime..."
          />
          <input type="submit" value="Pesquisar" />
        </form>
      </div>
      <span>
        Exemplo:
        <a href="/title/search?title=Batman">Batman</a>,
        <a href="/title/search?title=La%20casa%20de%20papel">La casa de papel</a>
        <a href="/title/search?title=Dragon%20Ball">Dragon Ball</a>,
      </span>
    </div>
  </div>
</div>

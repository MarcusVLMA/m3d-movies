<script>
  // Abre meu de login
  $("button.open-button").click(() => {
      $("div#loginForm-wrapper").show();
    }
  );
  // Fecha menu de login
  $(document).mouseup((e) => { 
    if ($(e.target).closest("div#loginForm-wrapper").length === 0) { 
      $("div#loginForm-wrapper").hide(); 
    } 
  }); 
</script>